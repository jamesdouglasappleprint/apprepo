<?xml version="1.0" encoding="UTF-8" ?>
  <widget xmlns = "http://www.w3.org/ns/widgets"

       xmlns:gap   = "http://phonegap.com/ns/1.0"
       id          = "com.applegotchi"
       version     = "1.0.0">

  <name>IN DEV</name>

  <description>DEV:</description>

  <author href="http://yoursite.com" email="you@youremail.com">Your Name</author>

  <gap:config-file platform="iOS" parent="CFBundleVersion">
    <string>1.0</string>
  </gap:config-file>

  <platform name="ios" >
    <preference name="orientation" value="portrait" />
  </platform>

  <platform name="android" >
    <preference name="orientation" value="portrait" />
  </platform>

  <plugin name="cordova-plugin-device" />
  <plugin name="cordova-plugin-whitelist" version="1"/>

  <platform name="android">
    <icon src="icon/icon-36-ldpi.png" density="ldpi"/>
    <icon src="icon/icon-48-mdpi.png" density="mdpi"/>
    <icon src="icon/icon-72-hdpi.png" density="hdpi"/>
    <icon src="icon/icon-96-xhdpi.png" density="xhdpi"/>
  </platform>

  <platform name="ios">
    <icon src="icon/icon-40.png" width="40" height="40"/>
    <icon src="icon/icon-40@2x.png" width="80" height="80"/>
    <icon src="icon/icon-40@3x.png" width="120" height="120"/>
    <icon src="icon.png"/>
    <icon src="icon/icon-50.png" width="50" height="50"/>
    <icon src="icon/icon-50@2x.png" width="100" height="100"/>
    <icon src="icon/icon-Small-50.png" width="50" height="50"/>
    <icon src="icon/icon-Small-50@2x.png" width="100" height="100"/>
    <icon src="icon/icon-57.png" width="57" height="57"/>
    <icon src="icon/icon-57-2x.png" width="114" height="114"/>
    <icon src="icon/icon-60.png" width="60" height="60"/>
    <icon src="icon/icon-60@2x.png" width="120" height="120"/>
    <icon src="icon/icon-60@3x.png" width="180" height="180"/>
    <icon src="icon/icon-72.png" width="72" height="72"/>
    <icon src="icon/icon-72-2x.png" width="144" height="144"/>
    <icon src="icon/icon-76.png" width="76" height="76"/>
    <icon src="icon/icon-76-2x.png" width="152" height="152"/>
  </platform>

  <!-- Define app splash screen for each platform. -->
  <platform name="android">
    <splash src="screen/screen-ldpi-portrait.png" density="port-ldpi" />
    <splash src="screen/screen-mdpi-portrait.png" density="port-mdpi" />
    <splash src="screen/screen-hdpi-portrait.png" density="port-hdpi" />
    <splash src="screen/screen-xhdpi-portrait.png" density="port-xhdpi" />
  </platform>

  <platform>
    <splash src="splash.png" />
  </platform>

  <platform name="ios">
    <!-- iPhone and iPod touch -->
    <splash src="Default.png" width="320" height="480" />
    <splash src="Default@2x.png" width="640" height="960" />
    <!-- iPhone 5 / iPod Touch (5th Generation) -->
    <splash src="Default-568h@2x.png" width="640" height="1136" />
    <splash src="Default-Landscape-568h@2x.png" width="1136" height="640" />
    <!-- iPhone 6 -->
    <splash src="Default-667h@2x.png" width="750" height="1334" />
    <splash src="Default-Portrait-736h@3x.png" width="1242" height="2208" />
    <splash src="Default-Landscape-736h@3x.png" width="2208" height="1242" />
    <!-- iPad -->
    <splash src="Default-Portrait.png" width="768" height="1024" />
    <splash src="Default-Landscape.png" width="1024" height="768" />
    <!-- Retina iPad -->
    <splash src="Default-Portrait@2x.png" width="1536" height="2048" />
    <splash src="Default-Landscape@2x.png" width="2048" height="1536" />
  </platform>

  <access origin="*"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  <platform name="android">
    <allow-intent href="market:*"/>
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
  </platform>
</widget>
