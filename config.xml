<?xml version="1.0" encoding="UTF-8" ?>
  <widget xmlns = "http://www.w3.org/ns/widgets"

       xmlns:gap   = "http://phonegap.com/ns/1.0"
       id          = "com.applegotchi"
       version     = "2.0.3">

  <name>AppleGotchi</name>

  <description>AppleGotchi!</description>

  <author href="http://yoursite.com" email="you@youremail.com">Your Name</author>

  <platform name="ios" >
    <preference name="orientation" value="portrait" />
  </platform>

  <platform name="android" >
    <preference name="orientation" value="portrait" />
  </platform>

  <plugin name="cordova-plugin-device" />
  <plugin name="cordova-plugin-whitelist" version="1"/>

  <platform name="android">
    <icon src="res/icon/icon-36-ldpi.png" density="ldpi"/>
    <icon src="res/icon/icon-48-mdpi.png" density="mdpi"/>
    <icon src="res/icon/icon-72-hdpi.png" density="hdpi"/>
    <icon src="res/icon/icon-96-xhdpi.png" density="xhdpi"/>
  </platform>

  <platform>
    <icon src="icon.png"/>
  </platform>

  <platform name="ios">
    <icon src="res/icons/ios/icon-2x.png" width="114" height="114"/>
    <icon src="res/icons/ios/icon-40-2x.png" width="80" height="80"/>
    <icon src="res/icons/ios/icon-40.png" width="40" height="40"/>
    <icon src="res/icons/ios/icon-50-2x.png" width="100" height="100"/>
    <icon src="res/icons/ios/icon-50.png" width="50" height="50"/>
    <icon src="res/icons/ios/icon-60-2x.png" width="120" height="120"/>
    <icon src="res/icons/ios/icon-60-3x.png" width="180" height="180"/>
    <icon src="res/icons/ios/icon-60.png" width="120" height="120"/>
    <icon src="res/icons/ios/icon-72-2x.png" width="144" height="144"/>
    <icon src="res/icons/ios/icon-72.png" width="72" height="72"/>
    <icon src="res/icons/ios/Icon-76@2x.png" width="152" height="152"/>
    <icon src="res/icons/ios/icon-76.png" width="76" height="76"/>
    <icon src="res/icons/ios/icon-small-2x.png" width="58" height="58"/>
    <icon src="res/icons/ios/icon-small.png" width="29" height="29"/>
  </platform>

  <!-- Define app splash screen for each platform. -->
  <platform name="android">
    <splash src="res/screen/screen-ldpi-portrait.png" density="port-ldpi" />
    <splash src="res/screen/screen-mdpi-portrait.png" density="port-mdpi" />
    <splash src="res/screen/screen-hdpi-portrait.png" density="port-hdpi" />
    <splash src="res/screen/screen-xhdpi-portrait.png" density="port-xhdpi" />
  </platform>

  <platform>
    <splash src="splash.png" />
  </platform>

  <platform name="ios">
    <!-- iPhone and iPod touch -->
    <splash src="res/screen/ios/Default.png" width="320" height="480" />
    <splash src="res/screen/ios/Default-568h.png" width="320" height="568" />
    <splash src="res/screen/ios/screen-iphone-portrait.png" width="320" height="480" />
    <splash src="res/screen/ios/screen-iphone-portrait-2x.png" width="640" height="960" />
    <splash src="res/screen/ios/screen-iphone-portrait-568h-2x.png" width="640" height="1136" />
    <splash src="res/screen/ios/screen-iphone-portrait-667h.png" width="750" height="1334" />
    <splash src="res/screen/ios/screen-iphone-portrait-736h.png" width="1242" height="2208" />

  </platform>


</widget>
